{
  "manifest_version": 3,
  "name": "Twitter Bookmark Exporter",
  "version": "1.0.0",
  "description": "Export your Twitter/X bookmarks to a CSV file",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export Twitter Bookmarks"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/i/bookmarks*",
        "https://twitter.com/i/bookmarks*"
      ],
      "js": ["content.js"]
    }
  ]
}
